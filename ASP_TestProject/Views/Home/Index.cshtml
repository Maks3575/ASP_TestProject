@model List<ASP_TestProject.File>
@{
    ViewBag.Title = "File list";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>
                <a href="@Url.Action("UploadFile", "Home")">
                    Upload File
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>
                    @file.Name
                </td>
                <td>
                    <a href="@Url.Action("DownloadFile", "Home", new { id = file.Id })">
                        Download File
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>





